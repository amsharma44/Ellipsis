<UserControl x:Class="Ellipsis.Controls.VideoConvertTaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ellipsis.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="300">

    <Grid x:Name="RootGrid" Height="50">

        <Rectangle x:Name="Thumbnail" Fill="Brown" Height="50" Width="50"
                   HorizontalAlignment="Left"/>
        <TextBlock x:Name="VideoNameTextBlcok" Text="{Binding Title}" HorizontalAlignment="Left"
                   Margin="62,12,12,12"/>
    </Grid>
</UserControl>
